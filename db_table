create table sp_user (id int(8) NOT NULL primary key,name varchar(10) not null unique,handle varchar(10) not null unique,password char(60) not null unique,color varchar(8),type varchar(8) not null);
create table sp_session(sess_id char(8) not null primary key,time int unsigned not null,user_id int not null unique,index sess_index(user_id), foreign key fk_user_id (user_id) references sp_user(id) on delete cascade on update cascade);
create table sp_board_thread(id int(8) not null primary key,name varchar(20) not null,des text,auther_id int(8) not null,index th_index(auther_id), foreign key (auther_id) references sp_user(id) on delete cascade on update cascade);
create table sp_board_post(id int(8) not null primary key,time decimal(17,7) not null,title varchar(50) not null,mess text,th_id int(8) not null,ip char(15) not null,wr_id int(8) not null,foreign key (th_id) references sp_board_thread(id) on delete cascade on update cascade,foreign key (wr_id) references sp_user(id));
create table sp_contact(id int(8) not null primary key,content text not null,user_id int(8) not null,foreign key (user_id) references sp_user(id) on delete cascade on update cascade);
create table sp_ip (addr char(16) not null unique,time int unsigned not null);
create table sp_file(id int(8) not null primary key,sfilename char(36) not null,tfilename varchar(32) not null,time decimal(17,7) not null,user_id int(8) not null,foreign key fk_up_id(user_id) references sp_user(id) on delete cascade on update cascade);
create table sp_chat_room(id int(8) not null primary key,name varchar(20) not null,des text,auther_id int(8) not null,index th_index(auther_id), foreign key (auther_id) references sp_user(id) on delete cascade on update cascade);
